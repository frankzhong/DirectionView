<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:weightSum="1">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/myView"
        android:layout_below="@+id/textView"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SecondPage" />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ThirdPage" />
    </LinearLayout>

    <com.frank.directioncontrol.DirectionView
        android:id="@+id/directionView"
        android:layout_width="100dp"
        android:layout_height="100dp" />

    <com.frank.directioncontrol.MyView
        android:id="@+id/myView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_gravity="center" />

    <com.frank.directioncontrol.ZoomView
        android:id="@+id/zoomView"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_gravity="center"/>


</LinearLayout>
